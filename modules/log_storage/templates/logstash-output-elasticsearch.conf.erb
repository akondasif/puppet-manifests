output {
  elasticsearch {
    hosts => <%= @elasticsearch_hosts %>
    <% if @elasticsearch_bind_port %>
    bind_port => "<%= @elasticsearch_bind_port %>"
    <% end %>
    <% if @elasticsearch_cluster %>
    cluster => "<%= @elasticsearch_cluster %>"
    <% end %>
    <% if @elasticsearch_ssl %>
    ssl => "<%= @elasticsearch_ssl %>"
    <% end %>
    <% if @elasticsearch_ssl_cert_verify %>
    ssl_certificate_verification => "<%= @elasticsearch_ssl_cert_verify %>"
    <% end %>
    <% if @elasticsearch_cacert %>
    cacert => "<%= @elasticsearch_cacert %>"
    <% end %>
    <% if @elasticsearch_workers %>
    workers => <%= @elasticsearch_workers %>
    <% end %>
    <% if @elasticsearch_max_retries %>
    max_retries => <%= @elasticsearch_max_retries %>
    <% end %>
    index => <%= @elasticsearch_index %>
  }
}
